{
  "name": "inlink-platform",
  "version": "1.0.0",
  "private": true,
  "description": "InLink - Influencer-Brand Collaboration Marketplace Platform",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=@inlink/backend",
    "dev:frontend": "npm run dev --workspace=@inlink/frontend",
    "build": "npm run build --workspace=@inlink/frontend",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,jsx,json,md}\"",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "migrate:up": "npm run migrate:up --workspace=@inlink/backend",
    "migrate:down": "npm run migrate:down --workspace=@inlink/backend"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "prettier": "^3.1.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
